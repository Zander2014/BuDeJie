<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"

    tools:context="com.dream.budejie.MainActivity">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:layout_weight="1" >
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#f5f5f5"
        android:paddingTop="2dp">

        <RadioButton
            android:id="@+id/elite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tab_selector_elete"
            android:gravity="center"
            android:text="精华"
            android:textSize="10sp"
            android:textColor="@color/tab_selector_tv_color"/>

        <RadioButton
            android:id="@+id/newpost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_selector_newpost"
            android:gravity="center"
            android:text="新贴"
            android:textSize="10sp"
            android:textColor="@color/tab_selector_tv_color"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageButton
                android:id="@+id/writeposts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:src="@drawable/tab_selector_writep"/>

        </LinearLayout>
        <RadioButton
            android:id="@+id/attention"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_selector_attention"
            android:gravity="center"
            android:text="关注"
            android:textSize="10sp"
            android:textColor="@color/tab_selector_tv_color"/>
        <RadioButton
            android:id="@+id/mine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_selector_main"
            android:gravity="center"
            android:text="我的"
            android:textSize="10sp"
            android:textColor="@color/tab_selector_tv_color"/>

    </RadioGroup>

</LinearLayout>
