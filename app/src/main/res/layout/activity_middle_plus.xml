<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.dream.budejie.Middle_plusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:src="@mipmap/icon_post_copyright" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <RadioButton
                android:layout_width="0dp"
                android:background="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/send_video_uninstall"
                android:gravity="center"
                android:text="发视频"
                android:id="@+id/send_video"
                android:textSize="20sp"/>

            <RadioButton
                android:layout_width="0dp"
                android:background="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/send_picture"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/send_picture"
                android:text="发图片" />

            <RadioButton
                android:layout_width="0dp"
                android:background="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/send_text"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/send_text"
                android:text="发段子" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:button="@null"
                android:drawableTop="@mipmap/send_voice"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/send_voice"
                android:text="发声音" />

            <RadioButton
                android:layout_width="0dp"
                android:background="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/audit"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/audit"
                android:text="审贴" />

            <RadioButton
                android:layout_width="0dp"
                android:background="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/send_link"
                android:gravity="center"
                android:textSize="20sp"
                android:id="@+id/send_link"
                android:text="发连接" />
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:text="取消"
            android:background="@android:color/holo_green_light"
            android:id="@+id/cancel_button"/>
    </RelativeLayout>
</LinearLayout>
