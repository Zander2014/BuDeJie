<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dream.budejie.FreeBackActivity">

    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_freeback_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="2015-12-25 16:49:50" />

            <TextView
                android:id="@+id/activity_freeback_textivew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/umeng_fb_reply_left_bg"
                android:text="您好,欢迎您给我们体产品的使用感受和建议.若希望得到更快的回复,请留下您的联系方式或加入QQ群133084754." />

            <ListView
                android:id="@+id/activity_freeback_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />
        </LinearLayout>
    <!--</ScrollView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/activity_freeback_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/freeback_edittext"
            android:hint="请写出你的意见" />

        <Button
            android:id="@+id/activity_freeback_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/freeback_fasong" />

    </LinearLayout>

</RelativeLayout>

