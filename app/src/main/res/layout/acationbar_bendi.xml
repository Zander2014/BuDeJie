<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/actionbar_bendi_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="#000000"
            android:textSize="20sp"
            android:button="@null"
            android:drawableLeft="@mipmap/collect_left_button_night"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/actionbar_bendi_downloading"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="下载中"
            android:textColor="#000000"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/actionbar_bendi_finish"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="已完成"
            android:textColor="#000000"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/actionbar_bendi_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/respost_delete"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp" />


    </LinearLayout>

</LinearLayout>
